FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY api ./api

# Create health check endpoint
RUN echo 'app.get("/health", (_, res) => res.send("OK"));' >> api/index.js

# Expose API port
EXPOSE 3000

# Start API server
CMD ["node", "api/index.js"]